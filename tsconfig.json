{
  "compilerOptions": {
                                               
    "lib": ["dom", "dom.interable", "esnext"],                                   
    "allowJs": true,                                                        
    "jsx": "reaact-jsx",                                               
    "noEmit": true,                                                
    "strict": true,                                 
    "moduleResolution": "node",  
    "resolveJsonModule": true,   
    "isolatedModules": true,             
    "allowSyntheticDefaultImports": true,        
    "esModuleInterop": true,                                             
    "skipLibCheck": true,                           
    "forceConsistentCasingInFileNames": true        
  },
  "include": ["src"]
}
